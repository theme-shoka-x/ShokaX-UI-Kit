{
  "name": "shokax-monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e"
  },
  "dependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@iconify-json/ri": "^1.2.5",
    "@unocss/reset": "66.1.0-beta.12",
    "@vitest/coverage-v8": "^3.1.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "unocss": "^66.0.0",
    "vite": "^6.3.3",
    "vitest": "^3.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "turbo": "^2.5.2"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "rolldown",
      "vue-demi"
    ]
  }
}
